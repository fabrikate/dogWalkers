<!DOCTYPE html>
<html>
<head>
  <title>EDoggy</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
  <link rel="stylesheet" href="/assets/style.css">
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/3.5.0/animate.min.css">
  <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/wow/1.1.2/wow.min.js"></script>
  <base href="/application.html.erb">
</head>
<body ng-app="app">
  <script type="text/javascript">
    new WOW().init();
  </script>
<nav class="navbar navbar-default">
  <div class="container-fluid">
    <div class="navbar-header">
      <a href="/auth/facebook" class="navbar-brand"><img src="assets/logo.png" alt="logo" id="logo" class="animated slideInLeft"/></a>
    </div>
    <ul class="nav navbar-nav navbar-right">
      <% if current_user %>
      <li><a href="/#/dogWalkers/<%= current_user.id %>">Find a dog walker</a></li>
      <li id="userName"><a href="/#/users/<%= current_user.id %>"><%= current_user.name %></a></li>
      <li><img src="<%= current_user.profileURL %>" alt="profilePic" class="img-circle" /></li>
      <li><%= link_to "Logout", '/sessions', method: :delete%></li>
      <% else %>
      <li><%= link_to "Login", "/auth/facebook", id: "sign_in", class: "btn btn-primary" %></li>
      <% end %>
    </ul>
  </div>
</nav>


<div class="container-fluid" ng-view>
</div>
<%= yield %>
</body>
</html>
