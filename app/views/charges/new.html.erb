<%= form_tag charges_path do %>
<article>
  <% if flash[:error].present? %>
  <div id="error_explanation">
    <p><%= flash[:error] %></p>
  </div>
  <% end %>
  <label class="amount"><span class="headers">Amount: $15.00</span</label>
</article>

<script src="https://checkout.stripe.com/checkout.js" class="stripe-button"
  data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
  data-description="A 30 minute dog walk"
  data-email='<%= @user.email %>'
  data-zip-code="true",
  data-image="assets/logo2.png"
  data-amount="1500"
  data-locale="auto">
</script>
<% end %>
<h2 class="text-info"><%= @user.email %></h2>
