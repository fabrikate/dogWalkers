<div class="modal">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h3>Checkout</h3>
      </div>
      <div class="modal-body">
        <h3>Pay $12 for a 30min walk</h3>
        <%= form_tag charges_path do %>
        <article class="col-lg-offset-2">
          <% if flash[:error].present? %>
          <div id="error_explanation">
            <p><%= flash[:error] %></p>
          </div>
          <% end %>
          <p>
            For testing use: 4242 4242 4242 4242 exp 01/19 123
          </p>
          </article>

          <script src="https://checkout.stripe.com/checkout.js" id="stripeBtn" class="stripe-button"
          data-key="<%= Rails.configuration.stripe[:publishable_key] %>"
          data-description="A 30 minute dog walk"
          data-email='<%= @user.email %>'
          data-zip-code="true",
          data-image="assets/logo2.png"
          data-amount="1200"
          data-locale="auto">
          </script>
          <% end %>
      </div>
    </div>
  </div>
</div>
